---
import Tag from './Tag.astro'

interface Props {
  backgroundUrl?: string;
  title: string;
  content: string;
  link: string;
  tags: string[];
}
const { backgroundUrl, title, content, link, tags } = Astro.props;
---

<a href={link}>
  <div
    class="card"
    style={`background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('${backgroundUrl}');`}
  >
    <div class="info">
      <h3>{title}</h3>
      <p>{content}</p>

      <div class="tags">
        {tags.map(tag => <Tag title={tag} />)}
      </div>
    </div>
  </div>
</a>

<style>
  a {
    text-decoration: none;
  }

  .card {
    background-color: black;
    background-repeat: no-repeat;
    background-size: contain;
    color: black;
    width: 400px;
    height: 350px;
    display: flex;
    justify-content: center;
    align-items: end;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    position: relative;
  }

  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.3);
  }

  .info {
    background-color: white;
    padding: 10px 30px 0px;
    height: 180px;
    width: 100%;
    display: flex;
    flex-direction: column;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    box-shadow: inset 0 5px 10px rgba(0, 0, 0, 0.2);
    overflow: hidden;
  }

  .tags {
    width: 100%;
    height: 40px;
    display: flex;
    flex-wrap: nowrap;
    overflow: hidden;
    white-space: nowrap;
    margin-top: auto;
    margin-bottom: 15px;
    align-items: center;
  }

  p,
  h3 {
    margin: 0;
    border: 0;
  }

  h3 {
    font-family: "poppins-bold";
    overflow: hidden;
    text-overflow: ellipsis;
    flex-grow: 1;
    max-height: 3em;
    line-height: 1.3;
    color: #342d2d;
  }

  p {
    font-size: smaller;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    max-height: 4.5em;
  }
</style>
